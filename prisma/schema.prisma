generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  username String @unique
  password String
  posts Post[] @relation("AuthorPosts")
  followers User[] @relation("UserFollowers")
  following User[] @relation("UserFollowers" )
  viewedPosts Post[] @relation("ViewedPosts")
  likedPosts Post[] @relation("LikedPosts")
  createdAt DateTime @default(now())
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  author    User     @relation(fields: [authorId], references: [id], name: "AuthorPosts")
  authorId  String
  viewers   User[]   @relation("ViewedPosts")
  likers    User[]   @relation("LikedPosts")
  imageUrls String[]
  createdAt DateTime @default(now())
}